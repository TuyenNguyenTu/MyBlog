                            <td class="mdl-data-table__cell--non-numeric">
                                <span class="label label--mini label__availability background-color--primary"></span>
                                <span class="label label--mini label__availability background-color--primary"></span>
                                <span class="label label--mini label__availability background-color--primary"></span>
                                <span class="label label--mini label__availability background-color--primary"></span>
